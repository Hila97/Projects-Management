<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>field</title>

    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>


<h2 >Filter by position</h2>
<input id="position" type="text" />
<button onclick="filter()">Filter by position</button>
<p style="color: red;" id="error"></p>
<table>


    <tr>

        <th>user name</th>
        <th>full name</th>
        <th>company name</th>
        <th>position</th>
        <th>phone</th>
        <th>fieldOfEmployment</th>
    </tr>
    <% employees.forEach((item)=>{%>
    <tr>

        <td><%=item.userName%></td>
        <td><%=item.fullName%></td>
        <td><%=item.companyName%></td>
        <td><%=item.position%></td>
        <td><%=item.phone%></td>
        <td><%=item.fieldOfEmployment%></td>
    </tr>
    <%});%>
</table>
</body>
<script>
    function filter(){
        let position = document.getElementById('position').value
        if(!position){
            document.getElementById('error').innerHTML = 'must insert position'
            return
        }

        window.location.href =`/filterEmployeesByposition/${position}`
    }
</script>
</html>