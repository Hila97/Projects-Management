    body {
        font-family: Lato, sans-serif;
        margin: 0;
        background-color: azure;

    }

    #navbar {
        width: 100vw;
        height: 4.5vw;
        background-color: #172429;
        font-weight: bold;
    }
    #navbar ul {
        list-style: none;
        margin: 0;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        padding: 1em 10px;
    }
    #navbar li a {
        text-decoration: none;
        color: #18c6c0;
        padding-right: 2em; /* Space between links in Nav*/
        position: relative;
        transition: all ease-in-out 250ms;
    }
    #navbar li a::after {
        content: "";
        position: absolute;
        display: block;
        height: 0.4em;
        width: 0%;
        background-color: white;
        bottom: -1em;
        transition: all ease-in-out 250ms;
    }
    #navbar li a:hover::after {
        width: 60%;
    }
    #navbar li a:hover {
        color: white;
    }
    #navbar li:first-child {
        margin-right: auto;
        margin-left: 1em;
    }

    .myButton {
        background-color: #0f9f8e;
        border-radius:28px;
        border:1px solid #29668f;
        display:inline-block;
        cursor:pointer;
        color:#ffffff;
        font-family: Arial ;
        font-size:17px;
        padding:10px 20px;
        text-decoration:none;
        text-shadow:0px 1px 0px #3d768a;
        margin-right: 20px;

    }
    .myButton:hover {
        background-color: #42e0db;
    }
    .myButton:active {
        position:relative;
        top:1px;
    }
</style>

