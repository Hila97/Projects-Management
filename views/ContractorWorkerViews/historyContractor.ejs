<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <meta charset="UTF-8">
    <title>History</title>
    <style>
        .btn-group button {
            background-color: #555555; /* Green background */
            border: 0px solid green; /* Green border */
            color: white; /* White text */
            padding: 10px 24px; /* Some padding */
            cursor: pointer; /* Pointer/hand icon */
            float: left; /* Float the buttons side by side */

        }
        h1 {
            /*margin-top: 30px;*/
            /*margin-bottom: 30px;*/
            text-align: left;
            font-family: "Arial Black";
            color: teal;
            margin-left: 30px;

        }
        h2{

        }
        table {
            font-family: arial, sans-serif;
            width: 80%;
            -moz-border-radius:6px;
            border-collapse: collapse; /* IE7 and lower */
            border-spacing: 0;
            margin-top: 30px;
            margin-left: 70px;
            box-shadow: 5px 5px 5px #aaaaaa;
        }

        td, th {
            text-align: left;
            padding: 8px;
            vertical-align: auto;

        }
        th{
            background-color: teal;
            color: white;
        }
        td{
            padding-right: 4px;
        }
        th:first-child {
            border-radius: 6px 0 0 0;
        }

        th:last-child {
            border-radius: 0 6px 0 0;
        }
        th:only-child{
            border-radius: 6px 6px 0 0;
        }
        table.center {
            margin-left: auto;
            margin-right: auto;
        }
        tr:nth-child(even) {
            background-color: #dddddd;
        }
        .hidden_row td{
            display:none;
            /* height: 0px; */
        }
        .button4 {border-radius: 12px;}
        input{
            margin-left: 30px;
        }
        .button2{
            margin-left: 10px;
            border-radius: 12px;
            color: teal;
            background-color: white;
            padding-top: 10px;
            padding-bottom: 10px;
        }
        input[type=date], select {
            width: 15%;
            padding: 5px 10px;
            margin: 2px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 12px;
            box-sizing: border-box;
            margin-left: 100px;
        }
    </style></head>


<body>
    <div>
        <%- include ('../partials/ContractorWorkerNav')%>
    </div>
<div class="content-area">
<h1>History</h1>
<input id="workDate" type="date" />
<button class="button2" style="margin-left: 100px" onclick="filter()">Filter History</button>
<div>
    <table>
        <tr>
            <th>field</th>
            <th>status</th>
            <th>bookingDate</th>
            <th>workDate</th>
        </tr>
        <% if (locals.employments) { %>
            <% employments.forEach((item)=>{%>
            <tr>
                <td><%=item.field%></td>
                <td><%=item.status%></td>
                <td><%=item.bookingDate.toDateString()%></td>
                <td><%=item.workDate.toDateString()%></td>
            </tr>
            <%});%>
        <% } %>
    </table>
</div>
</div>
<script>
    function filter(){
        let workDate = document.getElementById('workDate').value
        if(!workDate){
            document.getElementById('error').innerHTML = 'must choose BookingDate'
            return
        }
        console.log(workDate)
        // window.location.href =`/filterEmploymentsByBookingDate/${BookingDate}`
        window.location.pathname = `employment/filterEmploymentsByDateContractor/${workDate}`
    }
</script>
</body>
</html>