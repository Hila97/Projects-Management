<form class="form-horizontal" action='/contractorWorker/addContractor' method="POST">
    <fieldset>
        <div id="legend">
            <legend class="">Add New Contractor</legend>
        </div>

        <div class="control-group">
            <!-- ID-->
            <label class="control-label" for="ID">ID:</label>
            <div class="controls">
                <input type="number" placeholder="Enter contractor ID" name="ID" min="100000000" max="999999999" id="ID" required  pattern="(\d\d\d\d\d\d\d\d\d)$" title="ID not valid" >
            </div>
        </div>

<!--        <div class="control-group">-->
<!--            &lt;!&ndash; ID &ndash;&gt;-->
