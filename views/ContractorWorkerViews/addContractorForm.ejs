<!--                <label><input type="checkbox" name="workingDays.Thursday" value="Thursday" >Thursday</label>-->
<!--                <label><input type="checkbox" name="workingDays.Friday" value="Friday">Friday</label>-->
<!--            </div>-->
<!--        </div>-->


        <div class="control-group">
            <p class="space row">                      </p>
            <!-- Experience -->
            <label class="control-label"  for="Experience">Experience:</label>
            <div class="controls">
                <input type="number" id="Experience" name="Experience" placeholder="Enter the contractor's years of experience if there is no,Enter 0" class="input-xlarge" required pattern="[0-9]+" min="0" >
            </div>
        </div>

        <div class="control-group">
            <!-- E-mail -->
            <label class="control-label" for="userName">E-mail:</label>
            <div class="controls">
                <input type="email" id="userName" name="userName" placeholder="Enter contractor's email" class="input-xlarge" required>
            </div>
        </div>

        <div class="control-group">
            <!-- Password-->
            <label class="control-label" for="password">Password:</label>
            <div class="controls">
                <input type="password" placeholder="Enter contractor password " name="password" id="password"  required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,20}$"  title="Password must be at least 6 characters, contain a capital letter, a small letter, a char and a number" >
                <p class="space row">          </p>
            </div>
        </div>

        <div class="control-group">
            <!-- Button -->
            <div class="controls">
                <button class="btn btn-success" type="submit" onclick="checkHourlyWage()">Add New Contractor</button>
                <script>
                    function checkHourlyWage() {
                        var date=new Date()
                        var date2=new Date(document.getElementById("workDate").value);
                        if(date2>date)
                        {
                            document.getElementById("message1").innerHTML="invalid date";
                            return false
                        }
                    }
                </script>
            </div>
        </div>
    </fieldset>
</form>
</body>
